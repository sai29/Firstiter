<br>
<div class = "row">
	<div class="text-center">
		<h2>Sign in. Get working.</h2>
	</div>
	<br>

	<%= form_for(:session, url: sessions_path) do |f| %>
	
	<div class="large-4 large-offset-4 columns inline">
	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>
<br>
	 <%= f.submit "Sign in", class: "button medium radius" %>
	 <% end %>
	 <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>
